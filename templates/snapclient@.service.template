# Multi-instance snapclient service file
[Unit]
Description=Snapcast client
After=sound.target
Wants=avahi-daemon.service

[Service]
EnvironmentFile={{config_root}}/snapclient-%i
Type=simple
ExecStart=/usr/bin/snapclient -h $HOST $SNAPCLIENT_OPTS --hostID $HOST_ID

[Install]
WantedBy=multi-user.target
